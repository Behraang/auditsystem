<!DOCTYPE html>
<html>

<div class="mdl-grid demo-content">
  <div class="demo-charts mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--10-col mdl-grid">
    <form method="post" action="/adduser" style="margin-top:15px;">
      {{#if audit}}
        <input type="hidden" name="id" value="{{audit.id}}" />
      {{/if}}

        {{!-- ADD USER --}}
        <span class="mdl-chip mdl-chip--contact">
          <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white">A</span>
          <span class="mdl-chip__text">Add User</span>
        </span><br>
        
        {{!-- FIRSTNAME --}}
        <div class="mdl-card__title trv-title-fix">
          <h2 class="mdl-card__title-text">First Name:</h2>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" name="firstname" id="firstname" value="{{firstname}}">
          <label class="mdl-textfield__label" for="sample1">First Name...</label>
        </div><br>

        {{!-- LASTNAME --}}
        <div class="mdl-card__title trv-title-fix">
          <h2 class="mdl-card__title-text">Last Name:</h2>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" name="lastname" id="lastname" value="{{lastname}}">
          <label class="mdl-textfield__label" for="sample1">Last Name...</label>
        </div><br>

        {{!-- USERNAME --}}
        <div class="mdl-card__title trv-title-fix">
          <h2 class="mdl-card__title-text">Username:</h2>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" name="username" id="username" value="{{username}}">
          <label class="mdl-textfield__label" for="sample1">Username...</label>
        </div><br>

        {{!-- EMAIL --}}
        <div class="mdl-card__title trv-title-fix">
          <h2 class="mdl-card__title-text">Email:</h2>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" name="email" id="email" value="{{email}}">
          <label class="mdl-textfield__label" for="sample1">Email...</label>
        </div><br>

        {{!-- PASSWORD --}}
        <div class="mdl-card__title trv-title-fix">
          <h2 class="mdl-card__title-text">Password:</h2>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="password" name="password" id="password" value="{{password}}">
          <label class="mdl-textfield__label" for="sample1">Password...</label>
        </div><br>

        

        
        <div class="mdl-card__actions">
          <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--colored mdl-button--raised">
            {{#if audit}}Save{{else}}Create{{/if}}
          </button>
          <a class="mdl-button mdl-js-button mdl-js-ripple-effect" href="/">Cancel</a>
        </div><br><br>
    </form>
  </div>
</div>

</html>