<div id="signup">
  <h1>Sign Up for Free</h1>

  {{#if message}}
    <p class="message">{{message}}</p>
  {{/if}}
  <form action="/signup" method="post">

  <div class="field-wrap">
    <label for="username">
      Username<span class="req">*</span>
    </label>
    <input name="username" type="text" id="username" required autocomplete="off" />
  </div>

  <div class="field-wrap">
    <label for="email">
      Email Address<span class="req">*</span>
    </label>
    <input name="email" type="email" id="email" required autocomplete="off"/>
  </div>

  <div class="field-wrap">
    <label for="password">
      Set A Password<span class="req">*</span>
    </label>
    <input name="password" type="password" id="password" required autocomplete="off"/>
  </div>
  <div class="links">
    <div class="links-left">
      <p class="left-link"><a href="#login">Already have an account?</a></p>
    </div>
  </div>

  <button type="submit" class="button button-block"/>Get Started</button>
  </form>
</div>
